/* pages/meal-calorie/meal-calorie.wxss */

#top {
  padding-bottom: 7px;
  background-color: white;
}

#bar {
  padding: 4px 0;
  background-color: gainsboro;
}

.content {
  width: 44%;
  background-color: white;
}

.section2 {
  display: flex;
  width: 100%;
  padding-left: 3%;
  background-color: white;
  border-top: 1px solid gainsboro;
  border-bottom: 1px solid gainsboro;
  padding-top: 5px;
}

.photo {
  width: 100%;
  height:100%;
  border-radius: 9px;
}

.name {
  font-size: 15px;
  font-weight: bold;
  bottom: 3px;
  left: 5%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.text-intro {
  padding-left: 3%;
  width: 70%;
}

.calorie {
  left: 50%;
  width: 50%;
  font-size: 13px;
}

.time {
  width: 50%;
  font-size: 13px;
  float: right;
}

.all_calorie{
  text-align: center;
  width: 50%;
  font-size: 15px;
}